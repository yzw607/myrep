<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.wmp.common.bean.UploadPic" table="upload_pic">
        <id name="picId" type="java.lang.Integer" column="pic_id">
          <generator class="increment"></generator>
        </id>
        <property name="fileName" type="string" column="file_name" length="220"></property>
        <property name="activityId" type="string" column="activity_id" length="10"></property>
        <property name="userCode" type="string" column="user_code" length="50"></property>
    </class>
</hibernate-mapping>
