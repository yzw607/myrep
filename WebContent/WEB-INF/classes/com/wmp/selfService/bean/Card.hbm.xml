<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.wmp.selfService.bean.Card" table="card">
        <id name="cardId" type="java.lang.Integer" column="card_id">
          <generator class="increment"></generator>
        </id>
        <property name="cardCode" type="string" column="card_code" length="20"></property>
        <property name="cardType" type="string" column="card_type" length="10"></property>
        <property name="userCode" type="string" column="user_code" length="50"></property>
        <property name="cardValue" type="java.lang.Integer" column="card_value"></property>
        <property name="rechargeDate" type="java.util.Date" column="recharge_date"></property>
        <property name="status" type="java.lang.Integer" column="status"></property>
    </class>
</hibernate-mapping>