<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.wmp.selfService.bean.Question" table="question">
        <id name="questionId" type="java.lang.Integer" column="question_id">
          <generator class="increment"></generator>
        </id>
        <property name="question" type="string" column="question" length="500"></property>
        <property name="answer" type="string" column="answer" length="500"></property>
        <property name="userCode" type="string" column="user_code" length="50"></property>
        <property name="activityId" type="java.lang.Integer" column="activity_id"></property>
        <property name="status" type="java.lang.Integer" column="status"></property>
    </class>
</hibernate-mapping>