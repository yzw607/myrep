<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.wmp.selfService.bean.Stencil" table="stencil">
        <id name="stencilId" type="java.lang.Integer" column="stencil_id">
          <generator class="increment"></generator>
        </id>
        <property name="stencilName" type="string" column="stencil_name" length="20"></property>
        <property name="screenType" type="string" column="screen_type" length="10"></property>
        <property name="color" type="string" column="color" length="50"></property>
        <property name="style" type="string" column="style" length="20"></property>
        <property name="subject" type="string" column="subject" length="10"></property>
        <property name="location" type="string" column="location" length="50"></property>
        <property name="splitScreen" type="string" column="split_screen" length="20"></property>
        <property name="directions" type="string" column="directions" length="10"></property>
    </class>
</hibernate-mapping>